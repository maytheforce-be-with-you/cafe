<div class="inputRow">
<input id="nameInput" placeholder="Name">
<input id="placeInput" placeholder="Place">
<button onclick="addItem()">Add</button>
</div>

<div class="section">
<div class="title">To Visit</div>
<div id="pendingSection"></div>
</div>

<div class="section">
<div class="title">Visited</div>
<div id="visitedSection"></div>
</div>

</div>

<script>

function addItem() {

    var name = document.getElementById("nameInput").value;
    var place = document.getElementById("placeInput").value;

    if(name == "" || place == "") {
        alert("Please enter both");
        return;
    }

    var card = document.createElement("div");
    card.className = "card";

    var check = document.createElement("input");
    check.type = "checkbox";

    check.onclick = function() {
        moveItem(card);
    };

    var text = document.createElement("span");
    text.textContent = name + " , " + place;

    card.appendChild(check);
    card.appendChild(text);

    document.getElementById("pendingSection").appendChild(card);

    document.getElementById("nameInput").value = "";
    document.getElementById("placeInput").value = "";
}

function moveItem(card) {
    document.getElementById("visitedSection").appendChild(card);
}

</script>

